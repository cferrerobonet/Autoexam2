# Archivo de configuración del sistema - Ejemplo
# Copie este archivo a .env y configure los valores según su entorno

# URL Base del sistema
BASE_URL=https://example.com

# Configuración de la Base de Datos
DB_HOST=localhost
DB_NAME=sistema_db
DB_USER=db_user
DB_PASS=db_password
DB_PORT=3306
DB_CHARSET=utf8mb4

# Configuración SMTP para envío de correos
SMTP_HOST=smtp.example.com
SMTP_USER=user@example.com
SMTP_PASS=mail_password
SMTP_PORT=587
SMTP_SECURE=tls
SMTP_FROM=no-reply@example.com
SMTP_FROM_NAME=Sistema

# Configuración FTP/SFTP
FTP_HOST=ftp.example.com
FTP_USER=ftp_user
FTP_PASS=ftp_password
FTP_PORT=21
FTP_PATH=/archivos/
FTP_SECURE=false

# Modo de mantenimiento (true/false)
MODO_MANTENIMIENTO=false

# Configuración de seguridad
HASH_COST=12
SESSION_LIFETIME=7200

# Protección contra fuerza bruta
FB_MAX_INTENTOS=5
FB_TIEMPO_BLOQUEO=30

# Credenciales del administrador
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=admin_password
ADMIN_NOMBRE=Administrador
ADMIN_APELLIDOS=Sistema
ADMIN_ROL=admin

# Configuración del sistema
DOMINIO_PRODUCCION=autoexam.epla.es
DIAGNOSTICO_TOKEN=token_seguro_para_diagnostico
ADMIN_OVERRIDE_TOKEN=admin_override
SYSTEM_NAME=Sistema
SYSTEM_EMAIL_PREFIX=Sistema -
SISTEMA_VERSION=1.0
SISTEMA_FECHA=2023-05-01

# Configuración de sesión y tokens
SESSION_REGENERATION_TIME=1800
TOKEN_VALIDITY_TIME=3600

# Zona horaria
TIMEZONE=Europe/Madrid

# Configuración de archivos
MAX_UPLOAD_SIZE=5242880
ALLOWED_EXTENSIONS=jpg,jpeg,png,gif,pdf,doc,docx,xls,xlsx

# Depuración
DEBUG=false
